p.predicatePos({n1:PP(n2:PN(?pnr), ?ppr)}) -> p(n2:obl (n1:case(), ?pnr, ?ppr));
p             ({n1:PP(n2:PN(?pnr), ?ppr)}) -> p(n2:nmod(n1:case(), ?pnr, ?ppr));
# 100091 100649 VVFIN, 10008 ADJA
p.predicatePos({n:ZEIT()}) -> p(n:obl ());
                n:ZEIT()   ->   n:nmod();
