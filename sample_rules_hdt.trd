# TODO all rules with all the PoS tags
# 10006
p.predicatePos({n1:PP(n2:PN(n3:PN()))}) -> p(n3:obl (n1:advmod(), n2:case()));
p             ({n1:PP(n2:PN(n3:PN()))}) -> p(n3:nmod(n1:advmod(), n2:case()));
# two different conversions depending on PoS tag of head
